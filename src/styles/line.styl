.line
	padding 0 3px
	&-title
		margin 3% 0
		/*background linear-gradient(to right, white, #3E3A3A, white)*/
		background-color #A7A2A2
		display inline-block
		width 100%
		text-align center
	&-button
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px
	&-title-category
		margin 3% 0
		/*background linear-gradient(to right, white, #3E3A3A, white)*/
		background-color #A7A2A2	
		display inline-block
		width 100%
		text-align center
	&-button-category
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px
	&-paragraf-service
		font-size 1rem
		font-family 'Roboto Slab', serif
		align-items justify
		text-align justify
		margin 0 3%
		&-title
			font-size 1.5rem
		&-section
			margin-left 5%
	&-paragraf-soldout
		font-size 1.5rem
		font-family 'Roboto Slab', serif
		align-items center
		text-align center
		margin 5% 3%
		&-title
			font-size 1.5rem
			margin 8% 0
		&-img
			width 100%
		&-section
			margin-left 5%
			font-size 1rem
			text-align justify
	&-paragraf
		font-size 1rem
		font-family 'Roboto Slab', serif
		align-items justify
		text-align justify
		margin 0 3%
		&-title
			font-size 1.5rem
		&-section
			margin-left 5%
	&-form
		margin 0 3%
		font-family 'Roboto Slab', serif
		img
			width 100%
		&-field
			display flex
			flex-wrap wrap
			&-name
				font-size 1rem
				font-weight 400
				&-agree
					text-align justify
					order 2
					width 80%
			&-box
				width 100%
				border-radius 5px
				border-style groove
				font-size 1rem
			&-commentary
				width 100%
				height 100px
				border-radius 10px
				border-style groove
			&-check
				width 20px
				height 20px
				order 1
				width 10%
			&-accept
				padding 5% 0
		&-button
			text-align end
			font-weight 700
			input
				background-color #9E9E9E
				padding 2% 3%
	&-companyImage
		display inline-block
		text-align center
		img
			width 100%
	&-copain
		display flex
		padding 5% 0
		flex-wrap wrap
		iframe
			width 100%
		img
			width 50%

@media (min-width 768px)
	.line
		display flex
		margin 0 auto
		flex-wrap wrap
		justify-content space-around
		padding-bottom 2%
		&-button
			display flex
			width 89%
			order 2
			justify-content space-between
			align-items center
			picture
				margin 0 3px
				img
					border none
		&-button-category
			display flex
			flex-wrap wrap
			width 80%
			order 3
			justify-content flex-end
			padding 0
			margin 0 5%
			picture
				order 2
				margin 1% 5% 2% 5%
				width 30%
				img
					border none
					width 100%
					height 100%
		&-title
			width 100%
			background linear-gradient(to right, #A7A2A2, white)
			margin 0 45% 0 15%
			font-size 2.5rem
			max-height 50px
			text-align start
		&-title-category
			order 1
			margin 0
			background linear-gradient(to right, #A7A2A2, white, white, white)
			width 100%
			order 1
			font-size 2.5rem
			max-height 50px
			text-align start
		&-paragraf-service
			width 80%
			order 3
			margin 0
			p
				margin-right 20%
		&-paragraf-soldout
			width 85%
			order 3
			margin 0
			&-title
				margin 2%
				font-size 2.5rem
			&-img
				width 30%
		&-paragraf
			width 40%
			order 2
			margin 0
			margin-left 5%
		&-form
			width 40%
			order 3
			margin 0
			text-align center
			img
				width 60%
		&-social
			width 10%
			order 1
			justify-content flex-start
		&-companyImage
			width 40%
			order 3
			img
				width 80%
		&-copain
			display inline-block
			padding-top 8%
			text-align end
			img
				width 100%
	.guideline
		margin-left 15%
	.guidecategory
		margin-left 17.5%
	.soldout
		display flex
		flex-wrap wrap