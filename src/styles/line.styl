.line
	padding 0 3px
	&-title
		margin 3% 0
		background linear-gradient(to right, white, #3E3A3A, white)
		border-radius 20px
		display inline-block
		width 80%
	&-button
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px
	&-paragraf
		font-size 1rem
		font-family 'Roboto Slab', serif
		align-items justify
		text-align justify
		margin 0 3%
	&-form
		margin 0 3%
		font-family 'Roboto Slab', serif
		&-field
			display flex
			flex-wrap wrap
			&-name
				font-size 1rem
				font-weight 400
				&-agree
					text-align justify
					order 2
					width 80%
			&-box
				width 100%
				border-radius 5px
				border-style groove
			&-commentary
				width 100%
				height 100px
				border-radius 10px
				border-style groove
			&-check
				width 20px
				height 20px
				order 1
				width 10%
			&-accept
				padding 5% 0
		&-button
			text-align end
			font-weight 700
			input
				background-color #9E9E9E
				padding 2% 3%
	&-companyImage
		display inline-block
		background-color black
		img
			width 100%
	&-copain
		display inline-block
		padding 5% 0
		text-align end
		img
			width 50%

@media (min-width 768px)
	.line
		display flex
		margin 0 auto
		flex-wrap wrap
		justify-content space-around
		padding-bottom 5%
		&-button
			display flex
			width 89%
			order 2
			justify-content space-between
			align-items center
			picture
				margin 0 3px
				img
					border none
		&-title
			width 100%
			margin 0 45% 0 15%
		&-paragraf
			width 40%
			order 2
			margin 0
		&-form
			width 40%
			order 3
			margin 0
		&-social
			width 10%
			order 1
			justify-content flex-start		
		&-footer
			background-color white
		
		&-companyImage
			width 40%
			order 3