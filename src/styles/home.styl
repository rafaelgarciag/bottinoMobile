.content
	padding 0 3px
	&-images
		padding 0 3px
		picture
		margin 0 auto
		&-category
			img
				width 100%
	&-news
		padding 0 3px
		box-sizing border-box
		display block
		text-align center
		max-width 1000px
		&-first
			background-color black
			width 100%
		&-second
			background-color yellow
			width 100%
		&-third
			background-color green
			width 100%
	&-maps
		padding 0 3px
		box-sizing border-box
		display block
		text-align center
		max-width 1000px
		&-control
			width 100%
		&-description
			font-size 1.4rem
	&-social
		padding 10% 0
		width 100%
		margin 0 auto
		display flex
		justify-content center
		&-icon
			-webkit-filter grayscale(1)
		&-icon:hover
			-webkit-filter none
		img
			width 70%
.guide
	display flex
	flex-wrap wrap
	text-decoration none
	margin-left 2%
	&-home
		text-decoration none
		color black
	&-button
		text-decoration none
		color black
		margin-left 1%

@media (min-width 768px)
	.content
		display flex
		margin 0 auto
		flex-wrap wrap
		justify-content space-around
		&-images
			display flex
			width 89%
			order 2
			justify-content space-between
			align-items center
			picture
			margin 0 3px
			&-category
				transition all 0.9s ease
				width 33%
			img
				border none
		&-news
			display flex
			flex-wrap wrap
			width 100%
			margin 0 1%
			order 3
			padding-top 5%
			&-first
				width 50%
			&-second
				width 50%
			&-third
				width 100%
		&-maps
			display flex
			flex-wrap wrap
			width 100%
			margin 0 1%
			order 3
			padding-top 5%
			&-title
				width 100%
			&-description
				width 100%
		&-social
			width 10%
			padding 0
			margin 0
			order 1
			flex-direction column
			text-align center
			img
				width 30%
				padding 4% 0
	.guide
		margin-left 10%
		margin-bottom 0.3%