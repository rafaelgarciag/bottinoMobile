.category
	&-button
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 45%
			padding 3% 0
			display flex
			flex-wrap wrap
			align-items center
			justify-content center
			img
				width 100%
			&-more
				display flex
				flex-wrap wrap
				background-color black
				color white
				text-decoration none
				font-size 1rem
				font-weight 700
				text-align center
				justify-content space-around
				align-items center
				border-radius 30%
				padding 2% 0
				img
					width 20%
					height 20%
				&-text
					margin 0
					font-size 1.2rem
			&-info
				width 100% /*Con marketcar es 70%*/
				margin 0
				&-material
					margin 0 auto
					font-size 1.1rem
				&-color
					margin 0 auto
					font-size 1.1rem
				&-name
					font-size 1.5rem
			&-marketcar
				width 15%
	&-social
		padding 10% 0
		width 100%
		margin 0 auto
		display flex
		justify-content center
		&-icon
			-webkit-filter grayscale(1)
		&-icon:hover
			-webkit-filter none
		img
			width 70%
				

@media (min-width 668px)
	.category
		display flex
		flex-wrap wrap
		&-button
			display flex
			width 100%
			order 1
			justify-content center
			align-items center
			picture
				margin 0 3px
				img
					border none
		&-images
			display flex
			flex-wrap wrap
			width 85%
			order 3
			&-item
				justify-content center
				width 18%
				padding 1% 0
				&-info
					width 100% /*Con carro de compras el widht es 55%*/
					&-material
						font-size 1rem
					&-price
						font-size 1.5rem
				&-marketcar
					width 15%
		&-social
			width 10%
			padding 0
			margin 0
			order 2
			flex-direction column
			text-align center
			img
				width 30%
				padding 4% 0
	.title-men
		margin-left 10%