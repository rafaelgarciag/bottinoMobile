.category
	&-button
		padding 5px 3px 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 35%
			padding 8% 0
			display flex
			flex-wrap wrap
			align-items center
			justify-content flex-end
			img
				width 100%
			&-more
				display flex
				flex-wrap wrap
				color black
				text-decoration none
				font-family helvetica
				font-size 1rem
				font-weight 700
				text-align center
				justify-content flex-end
				align-items center
				border-radius 30%
				padding 0
				width 100%
				img
					width 20%
				&-text
					margin 0
					font-size 0.7rem
			&-info
				width 100% /*Con marketcar es 70%*/
				margin 0
				text-align center
				display flex
				&-material
					margin 0 auto
					font-size 0.8rem
					font-family helvetica
				&-color
					margin 0 auto
					font-size 1.1rem
				&-price
					font-size 1rem
					font-family helvetica
			&-marketcar
				width 15%
		&-buybutton
			width 100%
			font-size 0
			text-align center
			margin-top 5%
			input
				width 60%
	&-social
		padding 10% 0
		width 100%
		margin 0 auto
		display flex
		justify-content center
		&-icon
			-webkit-filter grayscale(1)
		&-icon:hover
			-webkit-filter none
		img
			width 70%
				

@media (min-width 668px)
	.category
		display flex
		flex-wrap wrap
		&-button
			display flex
			width 100%
			order 1
			justify-content center
			align-items center
			picture
				margin 0 3px
				img
					border none
		&-images
			display flex
			flex-wrap wrap
			width 85%
			order 3
			&-item
				justify-content flex-end
				width 18%
				padding 3% 5%
				&-info
					width 100% /*Con carro de compras el widht es 55%*/
					&-material
						font-size 0.8rem
					&-price
						font-size 1rem
				&-marketcar
					width 15%
			form
				input
					align-items center
		&-social
			width 10%
			padding 0
			margin 0
			order 1
			flex-direction column
			text-align center
			img
				width 30%
				padding 4% 0
	.title-men
		margin-left 10%