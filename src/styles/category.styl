.category
	&-button
	padding 0 3px
	picture
		margin 0 auto
		img
			width 100%
			height 120px
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 45%
			padding 3% 0
			display flex
			flex-wrap wrap
			align-items center
			justify-content space-between
			img
				width 100%
			&-link
				background-color #c3c3c3
			&-info
				width 70%
				margin 0
				&-material
					margin 0 auto
					font-size 1.1rem
				&-price
					font-size 1.5rem
			&-marketcar
				width 15%
				

@media (min-width 668px)
	.category
		&-button
			display flex
			width 89%
			order 2
			justify-content space-between
			align-items center
			picture
				margin 0 3px
				img
					border none
		&-images
			&-item
				justify-content space-between
				&-info
					width 55%
					&-material
						font-size 2rem
					&-price
						font-size 2rem
				&-marketcar
					width 10%