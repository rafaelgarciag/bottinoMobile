.products
	padding 0 3px
	&-title
		margin 3% 0
		background linear-gradient(to right, #3E3A3A, white)
		display inline-block
		width 40%
	&-button
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				height 120px

@media (min-width 768px)
	.products
		display flex
		margin 0 auto
		flex-wrap wrap
		justify-content space-around
		&-button
			display flex
			width 89%
			order 2
			justify-content space-between
			align-items center
			picture
				margin 0 3px
				img
					border none