.products
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 45%
			padding 3% 0
			display flex
			flex-wrap wrap
			align-items center
			img
				width 100%
			&-info
				width 70%
				margin-left 5%
				&-material
					margin 0 auto
					font-size 1.1rem
				&-price
					font-size 1.5rem
			&-marketcar
				width 25%
				

@media (min-width 768px)
	.products
		display flex