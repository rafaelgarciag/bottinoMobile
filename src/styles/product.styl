.product
	position absolute
	background-color #FFF
	z-index 3
	font-family helvetica
	&-close
		text-decoration none
		display flex
		justify-content flex-end
		margin-left 70%
		margin-top 5%
		width 30%
		position fixed
		z-index 20
		h1
			text-align end
			margin 0 2%
			font-size 1rem
			font-family helvetica
			color black
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 100%
			display flex
			flex-wrap wrap
			align-items center
			justify-content space-between
			transition all linear 500ms
			img
				width 100%
			&-link
				background-color #c3c3c3
			&-info
				width 100%
				margin 0 2%
				&-material
					margin 0 auto
					font-size 1.1rem
				&-color
					margin 0 auto
					font-size 1.1rem
				&-size
					margin 0 auto
					font-size 1.1rem
				&-description
					display flex
					flex-wrap wrap
					justify-content space-between
					&-price
						font-size 1.5rem
						margin-bottom 2%
					&-name
						font-size 1.5rem
						margin-bottom 2%
			&-marketcar
				width 10%
				margin 2%
		&-control
			display none
			width 100%
			text-align center
			font-size 1.5rem
			color black
			font-weight 700
			a
				text-decoration none
				margin 0 2%
			a:hover
				color #A7A2A2
			a:focus
				color #A7A2A2
	&-description
		margin 4% 2%
		width 97%
		&-title
			font-size 1.5rem
		&-paragraf
			font-size 0.8rem
			text-align justify
	&-paybutton
		text-align center
.product-form
		background-color gray
.gallery
	width 100%
	display none
	background-color #FFF
	&-images-item
		position relative
		picture
			transition all linear 500ms
			width 100%
			padding 5% 0
	&-recomendation
		font-size 0.5rem			
@media (min-width 668px)
	.product
		&-close
			position fixed
			top -40px
			margin-left 40%
			margin-top 5%
			h1
				font-size 1.5rem
		&-images
			&-item
				justify-content space-between
				&-info
					width 100% /*Con carro de compras el widht es 55%*/
					&-material
						font-size 1.5rem
					&-color
						font-size 1.5rem
					&-size
						font-size 1.5rem
					&-price
						font-size 2rem
				&-marketcar
					width 7%
		&-description
			margin 2%
			width 100%
			&-paragraf
				font-family 'Roboto Slab', serif
				font-size 1rem
				text-align justify
	.gallery
		width 50%
		padding 0 25%