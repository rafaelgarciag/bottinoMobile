.product
	position absolute
	background-color #FFF
	z-index 3
	&-close
		text-decoration none
		h1
			text-align end
			margin 0 2%
	&-images
		display flex
		flex-wrap wrap
		justify-content space-around
		&-item
			width 100%
			display flex
			flex-wrap wrap
			align-items center
			justify-content space-between
			img
				width 100%
			&-link
				background-color #c3c3c3
			&-info
				width 70%
				margin 0 2%
				&-material
					margin 0 auto
					font-size 1.1rem
				&-price
					font-size 1.5rem
			&-marketcar
				width 10%
				margin 2%
	&-description
		margin 5% 2%
		&-title
			font-size 1.2em
		&-paragraf
			font-family 'Roboto Slab', serif
			font-size 0.7rem
			text-align justify
			
@media (min-width 668px)
	.product
		&-images
			&-item
				justify-content space-between
				&-info
					width 55%
					&-material
						font-size 2rem
					&-price
						font-size 2rem
				&-marketcar
					width 10%