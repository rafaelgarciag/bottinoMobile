@require "nib"
@import "./normalize.css"
@import "./reset"
@import "./header"

body
	font-family caveat
	font-size 16px
	color black

.content
	padding 0 3px
	&-images
		padding 0 3px
		picture
			margin 0 auto
			img
				width 100%
				border 2px solid blue
	&-news
		padding 0 3px
		box-sizing border-box
		font-size 0
		display block
		text-align center
		&-first
			background-color black
			width 48.5%
			border 2px solid white
		&-second
			background-color yellow
			width 48.5%
			border 2px solid white
		&-third
			background-color green
			width 100%
			border 2px solid white